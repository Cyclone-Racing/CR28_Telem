{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/CMSIS_ADC.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "stlink",
            "device": "STM32H743ZI",
            "interface": "swd",
            "runToEntryPoint": "main",
            "preLaunchCommands": ["make -j8"],
            // "svdFile": "${workspaceFolder}/STM32H743ZI.svd",
            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 4000000,
                "swoFrequency": 4000000,
                "source": "probe",
                "decoders": [
                    {
                        "type": "console",
                        "label": "ITM",
                        "port": 0
                    }
                ]
            }
        },
        {
            "name": "Cortex Attach",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/CMSIS_ADC.elf",
            "request": "Attach",
            "type": "cortex-debug",
            "servertype": "stlink",
            "device": "STM32H743ZI",
            "interface": "swd",
            "runToEntryPoint": "main",
            "preLaunchCommands": ["make -j8"],
            // "svdFile": "${workspaceFolder}/STM32H743ZI.svd",
            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 4000000,
                "swoFrequency": 4000000,
                "source": "probe",
                "decoders": [
                    {
                        "type": "console",
                        "label": "ITM",
                        "port": 0
                    }
                ]
            }
        },
        {
            "name": "GDB Debug",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/CMSIS_ADC.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "stlink",
            "device": "STM32H743ZI",
            "interface": "swd",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "preLaunchCommands": ["make -j8"],
            // "svdFile": "${workspaceFolder}/STM32H743ZI.svd",
            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 4000000,
                "swoFrequency": 4000000,
                "source": "probe",
                "decoders": [
                    {
                        "type": "console",
                        "label": "ITM",
                        "port": 0
                    }
                ]
            }
        }
    ]
}